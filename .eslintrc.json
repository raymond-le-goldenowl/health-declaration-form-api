{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"arrowParens": "avoid",
				"trailingComma": "none",
				"useTabs": true,
				"semi": true,
				"endOfLine": "lf",
				"tabWidth": 2,
				"printWidth": 80,
				"singleQuote": true,
				"jsxSingleQuote": true
			}
		]
	}
}
